- const lectures = data.lectures.lectures;

doctype html
html(lang = 'en')

  //- block vars

  include partials/head

  body#page-top(data-spy = 'scroll')

    section#lectures
      .row.text-center
        .offset-2.col-8
          h1 Übersicht über alle #[strong Vorlesungen]
          hr.mb-0

      each lecture in lectures
        .row(id =`${lecture.key}`)
          .offset-2.col-8
            h2 #{lecture.title.de}
            p.lead #{lecture.lead.de} 

            ul.list-group.list-group-flush
              each unit, index in lecture.units
                li.list-group-item &ensp;&mdash;&ensp;#[a(href = `/units/${unit.key}.html`) #{unit.title.de}]


    section#footer.container
      include partials/footer

  include partials/scripts
